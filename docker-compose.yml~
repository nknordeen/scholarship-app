version: '2'

services:
   db:
     image: mysql:5.7
     volumes:
       - db_data:/var/lib/mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: scholarship
       MYSQL_DATABASE: scholarship
       MYSQL_USER: scholarship
       MYSQL_PASSWORD: scholarship

volumes:
    db_data:

ports: 
      - "3306:3306"